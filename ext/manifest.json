{
  "name": "Timelock",
  "version": "0.0.1",
  "description": "A friendly warlock that helps you manage your time!",
  "manifest_version": 2,
  "background": {
    "scripts": ["background/utils.js", "background/controller.js", "background/index.js"],
    "persistent": false
  },
  "app": {
    "launch": {
      "local_path": "onboard/index.html"
    }
  },
  "options_page": "onboard/index.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "browser_action": {
    "default_icon": {
      "32": "assets/icon.png"
    },
    "default_title": "Timelock",
    "default_popup": "popup/index.html"
  },
  "permissions": ["storage", "tabs", "webNavigation", "alarms"]
}
