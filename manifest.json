{
  "name": "Timelock",
  "version": "0.0.1",
  "description": "A friendly warlock that helps you manage your time!",
  "manifest_version": 2,
  "background": {
    "scripts": ["src/background/utils.js", "src/background/controller.js", "src/background/index.js"],
    "persistent": false
  },
  "options_page": "onboard/index.html",
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"]
    }
  ],
  "permissions": ["storage", "tabs", "webNavigation", "alarms"]
}
